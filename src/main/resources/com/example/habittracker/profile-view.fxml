<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@profile.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.habittracker.ProfileViewController">
   <children>
      <VBox layoutX="124.0" layoutY="13.0" prefHeight="324.0" prefWidth="369.0" styleClass="main_panel">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="profilePictureImageView" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@profile-pictures/default.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="133.0" top="20.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <Button fx:id="changeProfilePictureButton" mnemonicParsing="false" onAction="#changeProfilePicture" text="Change profile picture">
               <VBox.margin>
                  <Insets left="110.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Label styleClass="text-field" stylesheets="@profile.css" text="Name: Your Name" textFill="WHITE">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Label styleClass="text-field" text="Username: Your username" textFill="WHITE">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label styleClass="text-field" text="E-mail: Your e-mail">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <Button layoutX="31.0" layoutY="341.0" mnemonicParsing="false" onAction="#switchToDashBoardView" text="My Dashboard" />
   </children>
</AnchorPane>
